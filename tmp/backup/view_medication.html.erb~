<script type="text/javascript">
	$(document).ready(function() {
		 $.myFunctionName = function()   {
		 	var windowH = $(window).height();
		 	var divH = $('.mainbg').height();
		 	if(windowH > divH){
		 		var diff = windowH - divH - 181;
		 		if(diff > 0){
		 			$('.mainbg').css({'padding-bottom' : diff });
		 		}
		 	}
		  }

		$("ul.tabs").tabs("div.panes > .pane");
		 $.myFunctionName();

		 $('.tab-typ1 li').click(function(){ 
		 	$.myFunctionName(); 
		 });
	});
</script>
