if @care_providers.present?
  json.care_providers @care_providers.map do |care_provider|
  	json.care_provider { 
	    json.email care_provider.email
	    json.first_name care_provider.first_name
	    json.last_name care_provider.last_name
	    json.phone_number care_provider.phone_number
	    json.profile_image care_provider.profile_image
	    json.provider_role care_provider.provider_role
	    json.parent_provider_id care_provider.parent_provider_id
	    json.country_code care_provider.country_code
	}
  end
elsif @care_providers.blank?
  json.response_code "400"
  json.response_message "No Provider"
else
  json.response_code "400"
  json.response_message "Failure"
end