
if @consumer
  json.response_code "200"
  json.consumer_id @consumer.id
  json.device_id @consumer.device_id
  json.first_name @consumer.first_name
  json.last_name @consumer.last_name
  json.email @consumer.email
  json.phone_number @consumer.phone_number
  json.person_id @consumer.person_id
  json.consumer_name @consumer.consumer_name
  json.isd_code @consumer.isd_code
  json.pass_code @consumer.pass_code
else
  json.response_code "400"
  json.response_message "Invalid User"
  json.body {
    json.result "Login Fail, Try Again"
  }
end
