ThinkingSphinx::Index.define :provider, :with => :active_record, :delta => true do
  indexes first_name, :prefixes => true 
  indexes last_name, :prefixes => true 
  indexes email, :prefixes => true 
  indexes status, :prefixes => true
  indexes parent_provider_id, :prefixes => true
  indexes is_active, :prefixes => true
  indexes created_at, :sortable => true
  #indexes id, :prefixes => true

  set_property :enable_star => true 
  set_property :min_prefix_len => 3
  where "is_active IS NOT NULL"
  has id
end
