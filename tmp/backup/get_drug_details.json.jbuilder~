if @drug.present?
  json.response_code "200"
  json.response_message ""
  json.body {
    json.result "Success"
    if @drug.class.to_s == "Drug"
      json.drug_name @drug.drug_name_long
      json.generic_name @drug.generic_name
      json.drug_image @drug.drug_image.image_name.blank? ? nil : "http://#{request.host}:#{request.port}/api/drugs/get_drug_icon.json?image_name="+@drug.drug_image.image_name if @drug.drug_image.present?
      if @drug.drug_attribute.present?
        json.strength @drug.drug_attribute.strength if @drug.drug_attribute.strength.present? 
        json.fda_form @drug.drug_attribute.fda_form.fda_form_name if @drug.drug_attribute.fda_form.present?
        json.brand_name @drug.drug_attribute.branded_name_stub.branded_name if @drug.drug_attribute.branded_name_stub.present?
      end
      json.short_drug_name @drug.drug_name_short
     json.ndc9 @drug.ndc9
      json.drug_ingredients @drug.drug_ingredients.each do |ingredient|
        json.content "#{ingredient.ingeredient_name} #{ingredient.strength + ingredient.strength_unit}"
        if ingredient.per_volume.nonzero?
          json.content "#{ingredient.ingeredient_name} #{ingredient.strength + ingredient.strength_unit}/#{ingredient.per_volume}#{ingredient.per_volume_unit_code}"
        else
          json.content "#{ingredient.ingeredient_name} #{ingredient.strength + ingredient.strength_unit}"
        end
      end 
      json.drug_details @drug.patient_educations.map do |drug|
       json.full_description drug.descr
        json.possible_side_effect drug.side
        json.drug_interaction drug.inter
        json.contradictions drug.contra
        json.administration drug.admin
        json.missed drug.missed
        json.monitor drug.monitor
        json.storage drug.store
      end if @patient_educations
    else
      json.drug_name @drug.drug_name_short
      json.short_drug_name @drug.drug_name_short
      json.full_description @drug.description
    end
    json.medication @medication
    json.reminder @reminder
    json.reminder_id @reminder_id
  }
else
  json.response_code "1000"
  json.response_message ""
  json.body {
    json.result "Failure"
  }
end
