if @drug
  json.response_code "200"
  json.response_message ""
  json.body do
    json.result "success"
    json.drug @drug do |drug|
      json.id drug.id
      json.name drug.drug_name_short
      json.strengh drug.drug_attribute.strength
  end
end
else
  json.response_code "400"
  json.response_message "failure"
  json.result "drug not found"
end
