<%= form_tag '/rest_client' do %>
  <!-- API Method : <%#= select_tag :req_method, [['Get','get'], ['Post', 'post'], ['Put', 'put'], ['Delete', 'delete']]%> -->

  <div class="container">
    <div class="row">
      <div class="span12">
        <form class="form-horizontal span6">
