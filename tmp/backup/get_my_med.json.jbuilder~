if @my_medications.present?
	json.response_code "200"
	json.response_message ""
	json.body {
		json.result "Success"
		json.pill_info_list @my_medications do |medication|
			json.consumer_medication_id medication.id
			json.drug_id medication.consumer_drug_id
			json.name medication.consumer_drug.try(:drug_name_short)
			json.pill_type medication.consumer_drug_type #if medication.consumer_drug_type=="Drug"
			json.pill_image "http://#{request.host}:#{request.port}"+((medication.consumer_drug_type.eql?("Drug") && medication.consumer_drug.drug_image.image_name.present?)? "/drug_image/#{medication.consumer_drug.drug_image.image_name}" : "/assets/no_drug.jpg") rescue ""
			json.image_url medication.image_url
			json.strength medication.consumer_drug.try(:drug_attribute).try(:strength) if medication.consumer_drug_type=="Drug"
			json.compliance "#{medication.get_consumer_compliances medication.consumer_id, medication.id}"
		end
	}
elsif @my_medication.empty?
	json.response_code "1000"
	json.response_message "No data"
else
	json.response_code "400"
	json.response_message ""
	json.body {
		json.result "Failure"
	}
end
