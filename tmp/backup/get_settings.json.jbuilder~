if @my_settings.present?
	json.response_code "200"
	json.response_message ""
	json.body {
		json.result "Success"
		json.user_id @my_settings.consumer_id
		json.settings{
			json.snooze_duration @my_settings.snooze_duration
			json.reminder @my_settings.reminder
			json.message @my_settings.message
			json.language @my_settings.language
			json.time_zone @my_settings.time_zone
		}
	}
else
	json.response_code "400"
	json.response_message ""
	json.body {
		json.result "Failure"
	}
end
