if @reminders.present?
	json.response_code response.status
	json.response_message ""
	json.body {
		json.result "Success"
		json.reminders @reminders.as_json
	}
elsif current_consumer.present?
	json.response_code "200"
	json.response_message "No Records"
	json.body {
		json.result "No reminders for toady!"
	}
else
	json.response_code "400"
	json.response_message "Failure"
	json.body {
		json.result "Invalid parameters"
	}
end
